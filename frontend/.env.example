# Frontend Environment Variables
# Task Manager - Next.js Application

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=10000

# Authentication
NEXT_PUBLIC_TOKEN_STORAGE_KEY=access_token
NEXT_PUBLIC_REFRESH_TOKEN_STORAGE_KEY=refresh_token

# Application Settings
NEXT_PUBLIC_APP_NAME=Task Manager
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Gestor de Tareas Moderno

# Timezone Configuration
NEXT_PUBLIC_TIMEZONE=America/Lima
NEXT_PUBLIC_LOCALE=es-PE

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# API Endpoints
NEXT_PUBLIC_LOGIN_ENDPOINT=/api/token/
NEXT_PUBLIC_REFRESH_ENDPOINT=/api/token/refresh/
NEXT_PUBLIC_TASKS_ENDPOINT=/api/tasks/

# UI Configuration
NEXT_PUBLIC_ITEMS_PER_PAGE=10
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_THEME=light